@model LibraryManagementSystem.Models.LoginDetail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div style="text-align: center;">
        <div style="width: 400px; margin-left: auto; margin-right:auto;">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <fieldset>
                    <legend>Login</legend>

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true,"", new { @style = "color: red" })
                   
                    <table>
                        <tr>
                            <td>@Html.LabelFor(a => a.LoginName)</td>
                            <td>@Html.TextBoxFor(a => a.LoginName)</td>
                            <td>@Html.ValidationMessageFor(a => a.LoginName,"", new { @style = "color:red" })</td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(a => a.Password)
                            </td>
                            <td>
                                @Html.PasswordFor(a => a.Password)
                            </td>
                            <td>
                                @Html.ValidationMessageFor(a => a.Password, "", new { @style = "color:red" })
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" value="Login" OnClick="this.disabled='true'; this.value='Logging In...';this.form.submit(); return true;" />                            </td>
                            <td></td>
                        </tr>
                    </table>
                </fieldset>
            }
            <p>
                @Html.ActionLink("Register New Login", "CreateLogin")
            </p>
        </div>
    </div>
</body>
</html>
