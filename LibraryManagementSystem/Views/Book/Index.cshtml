@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Session["TypeofUser"] != null && Session["TypeofUser"].ToString() == "Admin")
    {
        @Html.ActionLink("Create New", "Create") <br />
    }
        @Html.ActionLink("Borrow Book", "Index", "BorrowedBy") <br />

        @using (Html.BeginForm())
        {
<p>
            Title: @Html.TextBox("SearchString") <br />
            Author: @Html.TextBox("author") <br />
            Publisher: @Html.TextBox("publisher") <br />
            <input type="submit" value="Filter" />
        </p>
    }
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedCount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BorrowedCount)
                </td>
                <td>
                    @if (Session["TypeofUser"] != null && Session["TypeofUser"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                    @if (Session["TypeofUser"] != null && Session["TypeofUser"].ToString() == "Admin")
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>
        }

    </table>

